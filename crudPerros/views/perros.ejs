<%- include("template/cabecera", {tituloWeb: "Perros"}) %>
    <!doctype html>
    <html lang="en">

    <head>
        <title>Perros</title>
        <!-- Required meta tags -->
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="../css/style.css">
        <!-- Bootstrap CSS v5.0.2 -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    </head>

    <body class="cuerpo">

        <!-- Bootstrap JavaScript Libraries -->
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
        <br>
        <br>
        <div class="container">
            <br>
            <h1>Crud Perros</h1>
            <br>
            <a class="btn btn-danger btn-block my 4 text-white" href="/perros/crear">Crear Perro</a>
            <br>
            <br>
            <table class="table bg-light">
                <thead class="thead-dark bg-dark text-white">
                    <tr>
                        <th scope="col ">Foto</th>
                        <th scope="col ">Nombre</th>
                        <th scope="col ">Raza</th>
                        <th scope="col ">Descripción</th>
                        <th scope="col ">Acción</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (arrayPerros.length> 0) { %>
                        <!--Haremos el foreach para recorrer el array-->
                        <% arrayPerros.forEach(perro=> { 
                           if(perro.foto==null || perro.foto==""){
                            perro.foto="perropordefecto.png"
                           } 
                        %>
                            <tr>
                                <td>
                                    <img src="/img/<%=perro.foto %>" style=" width: 100px; " />
                                </td>
                                <td>
                                    <%=perro.nombre %>
                                </td>
                                <td>
                                    <%=perro.raza %>
                                </td>
                                <td>
                                    <%=perro.descripcion %>
                                </td>
                                <td><a class="btn btn-info btn-sm" href="perros/<%= perro.id %>">Editar/Eliminar</a>
                                    <!-- perro.id se esta imprimiendo en el atributo href del enlace, para que al pinchar lleve el id en la URL-->
                                </td>
                            </tr>
                            <% }) %>
                                <% } %>
                </tbody>
            </table>
            <br>
            <br>
            <br>
        </div>
    </body>

    </html>

    <%- include("template/footer") %>